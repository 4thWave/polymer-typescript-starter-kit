{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "listFiles": true,
    "noEmitOnError": true
  },
  "include": [
    "src/**/*.ts",
    "bower_components/polymer-decorators/global.d.ts",
    "polymer-types/polymer-element.d.ts"
  ],
  "exclude": [
    "bower_components/polymer/lib/elements/custom-style.d.ts"
    ]
  }
}
